<h1>
  Movie #<%=@the_movie.id%> details
</h1>

<a href="/movies">
  Go back
</a>

<hr>

<dl>
  <dt>
    Title
  </dt>

  <dd>
    <%=@the_movie.title%>
  </dd>

  <dt>
    Year
  </dt>

  <dd>
    <%=@the_movie.year%>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%=@the_movie.duration%>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%=@the_movie.description%>

  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src=<%=@the_movie.image%> style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=@the_movie.created_at%>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=@the_movie.updated_at%>
  </dd>
</dl>

<hr>


<%matching_movies = Movie.where({:director_id => @the_director.id})%>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>
      
    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>


  
  <% matching_movies.each do |the_movie| %>
  <tr>
    <td><%= the_movie.id %></td>
    <td><img src="<%= the_movie.image %>" style="width:250px;"></td>
    <td><%= the_movie.title %></td>
    <td><%= the_movie.year %></td>
    <td><%= @the_director.name %></td>
    <td><a href="/movies/<%= the_movie.id %>">Show details</a></td>
  </tr>
<% end %>
</table>
